<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8">
    <title>Auto Marketplace</title>
    <link rel="stylesheet" th:href="@{/webjars/bootstrap/5.2.3/css/bootstrap.min.css}">
    <script th:src="@{/webjars/bootstrap/5.2.3/js/bootstrap.bundle.min.js}"></script>
</head>
<body>
<div class="container mt-4">
    <h1>Auto Marketplace</h1>

    <!-- Фільтри -->
    <form id="filterForm" class="row g-3 mb-4">
        <div class="col-md-2">
            <input type="text" class="form-control" placeholder="Марка" name="brand">
        </div>
        <div class="col-md-2">
            <input type="text" class="form-control" placeholder="Модель" name="model">
        </div>
        <div class="col-md-2">
            <input type="number" class="form-control" placeholder="Рік від" name="yearMin">
        </div>
        <div class="col-md-2">
            <input type="number" class="form-control" placeholder="Рік до" name="yearMax">
        </div>
        <div class="col-md-2">
            <input type="number" class="form-control" placeholder="Ціна до" name="priceMax">
        </div>
        <div class="col-md-2">
            <input type="number" class="form-control" placeholder="Пробіг до" name="mileageMax">
        </div>
        <div class="col-md-2">
            <input type="text" class="form-control" placeholder="Місто" name="city">
        </div>
        <div class="col-md-2">
            <select class="form-select" name="sortBy">
                <option value="">Сортувати</option>
                <option value="priceAsc">Ціна ↑</option>
                <option value="priceDesc">Ціна ↓</option>
                <option value="yearAsc">Рік ↑</option>
                <option value="yearDesc">Рік ↓</option>
                <option value="mileageAsc">Пробіг ↑</option>
                <option value="mileageDesc">Пробіг ↓</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-primary" onclick="applyFilters()">Застосувати</button>
        </div>
    </form>

    <!-- Список авто -->
    <div id="carList" class="row row-cols-1 row-cols-md-3 g-4">
        <div th:each="car : ${cars}" class="col">
            <div class="card h-100">
                <img th:src="${car.image}" class="card-img-top" alt="Фото авто">
                <div class="card-body">
                    <h5 class="card-title" th:text="${car.brand} + ' ' + ${car.model}"></h5>
                    <p class="card-text">
                        Рік: <span th:text="${car.year}"></span><br>
                        Ціна: $<span th:text="${car.price}"></span><br>
                        Пробіг: <span th:text="${car.mileage}"></span> км<br>
                        Місто: <span th:text="${car.city}"></span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function applyFilters() {
    const form = document.getElementById('filterForm');
    const params = new URLSearchParams(new FormData(form)).toString();
    fetch('/cars/filter?' + params)
        .then(response => response.text())
        .then(html => {
            document.getElementById('carList').innerHTML = html;
        });
}
</script>
</body>
</html>
